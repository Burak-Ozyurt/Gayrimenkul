@model Gayrimenkul.Models.User
@{
    ViewData["Title"] = "Profil Ayarları";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3><i class="fas fa-user-cog"></i> Profil Ayarları</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Profile" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input value="@Model.Email" class="form-control" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Telefon</label>
                            <input asp-for="Phone" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Yeni Şifre</label>
                            <input asp-for="Password" type="text" class="form-control" placeholder="Değiştirmek istemiyorsanız boş bırakın" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>