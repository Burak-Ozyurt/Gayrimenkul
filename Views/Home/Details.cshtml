@model Gayrimenkul.Models.Property
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="max-height: 400px; object-fit: cover;">
                <div class="card-body">
                    <span class="badge bg-primary mb-2">@Model.Category.Name</span>
                    <h2>@Model.Title</h2>
                    <p class="text-muted">
                        <i class="fas fa-map-marker-alt"></i> @Model.Address, @Model.District / @Model.City
                    </p>
                    <hr>
                    <h4 class="text-primary mb-3">₺@Model.Price.ToString("N0")</h4>
                    
                    <h5>Açıklama</h5>
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-info-circle"></i> Özellikler</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <i class="fas fa-ruler-combined"></i> <strong>Metrekare:</strong> @Model.SquareMeters m²
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-bed"></i> <strong>Oda Sayısı:</strong> @Model.Rooms
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-bath"></i> <strong>Banyo:</strong> @Model.Bathrooms
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-layer-group"></i> <strong>Kat:</strong> @Model.Floor
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-calendar"></i> <strong>Tarih:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy")
                    </li>
                </ul>
            </div>

            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5><i class="fas fa-user"></i> İlan Sahibi</h5>
                </div>
                <div class="card-body">
                    <p><strong>@Model.User.FullName</strong></p>
                    <p><i class="fas fa-phone"></i> @Model.User.Phone</p>
                    <p><i class="fas fa-envelope"></i> @Model.User.Email</p>
                </div>
            </div>

            @if (Context.Session.GetInt32("UserId") == Model.UserId)
            {
                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100 mb-2">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger w-100">
                        <i class="fas fa-trash"></i> Sil
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a>
    </div>
</div>