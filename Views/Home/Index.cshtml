@model IEnumerable<Gayrimenkul.Models.Property>
@{
    ViewData["Title"] = "İlanlar";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1><i class="fas fa-building"></i> Gayrimenkul İlanları</h1>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Şehir</label>
                    <select class="form-select" name="searchCity">
                        <option value="">Tüm Şehirler</option>
                        <option value="İstanbul" selected="@(ViewBag.SearchCity == "İstanbul")">İstanbul</option>
                        <option value="Ankara" selected="@(ViewBag.SearchCity == "Ankara")">Ankara</option>
                        <option value="İzmir" selected="@(ViewBag.SearchCity == "İzmir")">İzmir</option>
                        <option value="Bursa" selected="@(ViewBag.SearchCity == "Bursa")">Bursa</option>
                        <option value="Antalya" selected="@(ViewBag.SearchCity == "Antalya")">Antalya</option>
                        <option value="Sakarya" selected="@(ViewBag.SearchCity == "Sakarya")">Sakarya</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Kategori</label>
                    <select class="form-select" name="categoryId">
                        <option value="">Tüm Kategoriler</option>
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.Id" selected="@(ViewBag.SelectedCategory == category.Id)">
                                    @category.Name
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Ara
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card property-card h-100">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <span class="badge bg-primary mb-2">@item.Category.Name</span>
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-muted">
                            <i class="fas fa-map-marker-alt"></i> @item.City, @item.District
                        </p>
                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="fas fa-ruler-combined"></i> @item.SquareMeters m² |
                                <i class="fas fa-bed"></i> @item.Rooms Oda |
                                <i class="fas fa-bath"></i> @item.Bathrooms Banyo
                            </small>
                        </div>
                        <h4 class="text-primary">₺@item.Price.ToString("N0")</h4>
                        
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary w-100 mb-2">
                            <i class="fas fa-eye"></i> Detaylar
                        </a>

                        @if (Context.Session.GetInt32("UserId") == item.UserId)
                        {
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning flex-grow-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger flex-grow-1">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> Henüz ilan bulunmamaktadır.
        </div>
    }
</div>