@model IEnumerable<Gayrimenkul.Models.Category>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1><i class="fas fa-list"></i> Kategoriler</h1>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-tag"></i> @item.Name
                        </h5>
                        <p class="card-text text-muted">@item.Description</p>
                        <p class="text-info">
                            <i class="fas fa-home"></i> @item.Properties?.Count ilan
                        </p>
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                        }
                        <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@item.Id" class="btn btn-sm btn-primary">
                            <i class="fas fa-eye"></i> İlanları Gör
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>